
@{
    var sourceStudents = ViewBag.students;
    var gridStudents = new WebGrid(source: sourceStudents, rowsPerPage: 5);
}
<!DOCTYPE html>
<html>
<head>
    <title>Список групп</title>
    <style type="text/css">
        .grid {
            margin: 4px;
            border-collapse: collapse;
            width: 600px;
        }

        .head {
            background-color: #E8E8E8;
            font-weight: bold;
            color: #FFF;
        }

        .grid th, .grid td {
            border: 1px solid #C0C0C0;
            padding: 5px;
        }

        .alt {
            background-color: #E8E8E8;
            color: #000;
        }

        .product {
            width: 200px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>Список Студентов</h1>
    <div class="grid">
        @gridStudents.GetHtml(
                              tableStyle: "grid",
                              headerStyle: "head",
                              alternatingRowStyle: "alt",
                              columns: gridStudents.Columns(
                                  gridStudents.Column("Id", "ID"),
                                  gridStudents.Column("FirstName", "Имя"),
                                  gridStudents.Column("Surname", "Фамилия"),
                                  gridStudents.Column("Patronymic", "Отчество"),
                                  gridStudents.Column("Birthday", "День рождения"),
                                  gridStudents.Column("IsStependint", "Наличие стипендии"),
                                  gridStudents.Column("Group.Аbbreviation", "Группа")
                              )
        )
    </div>
</body>
</html>

