
@{
    var sourceCurators = ViewBag.curators;
    var gridCurators = new WebGrid(source: sourceCurators, rowsPerPage: 5);
}

<!DOCTYPE html>
<html>
<head>
    <title>Список кураторов</title>
    <style type="text/css">
        .grid {
            margin: 4px;
            border-collapse: collapse;
            width: 600px;
        }

        .head {
            background-color: #E8E8E8;
            font-weight: bold;
            color: #FFF;
        }

        .grid th, .grid td {
            border: 1px solid #C0C0C0;
            padding: 5px;
        }

        .alt {
            background-color: #E8E8E8;
            color: #000;
        }

        .product {
            width: 200px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>Список кураторов</h1>
    <div class="grid">
        @gridCurators.GetHtml(
                                tableStyle: "grid",
                                headerStyle: "head",
                                alternatingRowStyle: "alt",
                                columns: gridCurators.Columns(
                                    gridCurators.Column("Id", "ID"),
                                    gridCurators.Column("FirstName", "Имя"),
                                    gridCurators.Column("Surname", "Фамилия"),
                                    gridCurators.Column("Patronymic", "Отчество")
                                 )
                             )
    </div>
</body>
</html>

